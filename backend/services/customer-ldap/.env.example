# Environment
NODE_ENV=development
PORT=3013

# Omnistrate Configuration
OMNISTRATE_EMAIL=your-omnistrate-email@example.com
OMNISTRATE_PASSWORD=your-omnistrate-password
OMNISTRATE_SERVICE_ID=your-service-id
OMNISTRATE_ENVIRONMENT_ID=your-environment-id

# GCP Admin Service Account (Optional)
# Service account email for admin access to all instances
# GCP_ADMIN_SERVICE_ACCOUNT_EMAIL=admin@your-project.iam.gserviceaccount.com

# JWT Secret for Session Cookies
JWT_SECRET=your-secure-random-secret-key

# Service Name
SERVICE_NAME=customer-ldap

# CORS Configuration
# Comma-separated list of allowed origins (use specific origins, not '*' in production)
# Example: https://app.example.com,https://admin.example.com
CORS_ORIGINS=http://localhost:3000

# Timeout Configuration (in milliseconds)
REQUEST_TIMEOUT_MS=30000
LDAP_CONNECTION_TIMEOUT_MS=10000
K8S_PORT_FORWARD_TIMEOUT_MS=15000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
REDIS_DB=0
