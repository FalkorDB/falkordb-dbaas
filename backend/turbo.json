{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "test": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "start": {
      "cache": false
    },
    "serve": {
      "dependsOn": ["build"],
      "cache": false
    },
    "docker": {
      "cache": false
    },
    "deploy:dev": {
      "cache": false
    }
  },
  "globalDependencies": ["tsconfig.base.json"]
}
